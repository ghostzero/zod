{
    "name": "nyra/zod",
    "description": "Zod-style schema validation with static type inference",
    "keywords": [
        "validation",
        "schema",
        "zod",
        "php"
    ],
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.4"
    },
    "autoload": {
        "psr-4": {
            "Nyra\\Zod\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nyra\\Zod\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "René Preuß",
            "email": "rene@preuss.io"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "test": "@php vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true
    }
}
